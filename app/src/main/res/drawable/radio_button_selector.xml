<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected State -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/secondary"/>  <!-- Background color when selected -->
            <corners android:radius="12dp"/>  <!-- Rounded corners -->
            <padding android:left="12dp" android:right="12dp" android:top="10dp" android:bottom="10dp"/>
        </shape>
    </item>
    <!-- Default (Unselected) State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>  <!-- Default background -->
            <stroke android:width="2dp" android:color="@color/primary"/> <!-- Border color -->
            <corners android:radius="12dp"/>
            <padding android:left="12dp" android:right="12dp" android:top="10dp" android:bottom="10dp"/>
        </shape>
    </item>
</selector>
