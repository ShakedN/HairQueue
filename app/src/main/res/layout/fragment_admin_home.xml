<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_beige"
    tools:context=".Fragments.AdminHomeFragment">

    <Button
        android:id="@+id/loadAppointmentsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Today's Appointments"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center" />

    <!-- Empty state message for the ListView -->
    <TextView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="No appointments found."
        android:textColor="@android:color/darker_gray"
        android:visibility="gone" />

    <!-- ListView to display the appointments -->
    <ListView
        android:id="@+id/appointmentsListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

    <Button
        android:id="@+id/buttonSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Schedule Management" />
</LinearLayout>
