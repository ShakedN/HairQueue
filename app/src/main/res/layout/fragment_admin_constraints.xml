<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Selected Date -->
        <TextView
            android:id="@+id/selectedDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Radio Group for Day Type Selection -->
        <RadioGroup
            android:id="@+id/dayTypeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/workDayRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work Day" />

            <RadioButton
                android:id="@+id/dayOffRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day Off" />

            <RadioButton
                android:id="@+id/sickDayRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sick Day" />
        </RadioGroup>

        <!-- Work Day Time Selection Layout -->
        <LinearLayout
            android:id="@+id/workDayOptionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="16dp">

            <!-- Start Hour and Minute -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Start Time:" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <NumberPicker android:id="@+id/startHourPicker" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <NumberPicker android:id="@+id/startMinutePicker" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- End Hour and Minute -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="End Time:" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <NumberPicker android:id="@+id/endHourPicker" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <NumberPicker android:id="@+id/endMinutePicker" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Lunch Break Start -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Lunch Break Start:" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <NumberPicker android:id="@+id/lunchBreakStartPicker" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <NumberPicker android:id="@+id/lunchBreakStartMinutePicker" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Lunch Break End -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Lunch Break End:" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <NumberPicker android:id="@+id/lunchBreakEndPicker" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <NumberPicker android:id="@+id/lunchBreakEndMinutePicker" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Constraint Start -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Constraint Start Time:" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <NumberPicker android:id="@+id/constraintStartHourPicker" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <NumberPicker android:id="@+id/constraintStartMinutePicker" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Constraint End -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Constraint End Time:" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <NumberPicker android:id="@+id/constraintEndHourPicker" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <NumberPicker android:id="@+id/constraintEndMinutePicker" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
